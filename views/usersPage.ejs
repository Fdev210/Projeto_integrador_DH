        <div class="menu-toggle"><img id="fechar" src="images/colapsar.png" onclick="abrirMenu()"/></div>
        <div class="usuario">
            <div><h1>Olá, <%= usuario.nome %></h1></div>
            <div class="botoes">
                <button
                    id="botao_minha_conta"
                    onclick="window.location.href='http://localhost:3000/cadastro/<%=usuario.id %>';"  
                    type="button">Minha Conta</button>
                <button
                    id="botao_logout"
                    onclick="window.location.href='http://localhost:3000/cadastro/logout';"
                    type="button">Logout</button>
            </div>
        </div>
    
    <main>
        <nav id="navegacao" class="categorias">
            <div class="menu-toggle"><img src="images/colapsar.png" onclick="fecharMenu()"/></div>
            <h2>categorias: </h2>
            <p class="categoria_especifica">
                Lançamentos
            </p>
            <p class="categoria_especifica">
