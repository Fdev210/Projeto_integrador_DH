            <p class="categoria_especifica">
                Marvel
            </p>
            <p class="categoria_especifica">
                DC
            </p>
            <p class="categoria_especifica">
                Ziraldo
            </p>
            <p class="categoria_especifica">
                Turma da mônica
            </p>
        </nav>
    <!-- Fim categorias -->
        <!-- HQs em tela -->
        <section class="expositor">
            <% comics.forEach( elem => { %>
                <% if(elem) { %>
                    <div class="base_apoio">
                        <div class="hq">
                            <img src="<%= elem.capa %>" 
                                 onclick="window.location.href='http://localhost:3000/comicpage/<%= elem.id %>';" />
                        </div>
                        
                        <div class="container">
                            
                            <div class="infomacoes_tecnicas">
                                <p><%= elem.titulo %></p>
                                <p>autor: <%= elem.autor %></p>
                                <p>ano: <%= elem.ano %></p>
                            </div>
                            <div class="interagir">
                                <img src="images/favoritar.png"  />
                                <img src="images/salvar.png"  />
                            </div>
                        </div>
                    </div>
                <% } %>
            <% }) %>
        </section>
        <!-- Fim HQs em tela -->
    </main>

